<div class="container">
    <%= form_for(@destination) do |f| %>
        <div class="field">
            <%= f.label :name %><br>
            <%= f.text_area :name %>
        </div>
        <div class="field">
            <%= f.label :image %><br>
            <%= f.text_area :image %>
        </div>
        <div class="field">
            <%= f.label :description %><br>
            <%= f.text_area :description %>
        </div>

        <div class="actions">
            <%=  f.submit "Save" %>
        </div>
    <% end %>
</div>


